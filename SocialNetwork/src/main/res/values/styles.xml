<resources>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActionBar" parent="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActionBar.Icon">
        <item name="android:padding">@dimen/padding_action_bar</item>
    </style>

    <style name="ActionBar.ImageTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_action_bar</item>
    </style>

    <style name="Text.Name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_name</item>
    </style>

    <style name="Text.Date">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_date</item>
    </style>

    <style name="Text.Content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="Text.Name.Single">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.MoreImage">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_more</item>
    </style>

    <style name="Text.ActivityCount">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_activity_count</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.ActivitySummary">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_activity_summary</item>
    </style>

    <style name="ImagePost">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_view_common</item>
    </style>

    <style name="EmptyText" parent="Text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no_data</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
