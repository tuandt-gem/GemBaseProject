<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="selectableItemBackground">@drawable/navigation_item_bg</item>
        <item name="android:selectableItemBackground">@drawable/navigation_item_bg</item>
        <!--<item name="android:activatedBackgroundIndicator">@drawable/navigation_item_bg</item>-->
        <item name="android:listDivider">@color/black</item>
        <!--Using this value to set color for all control such as: back icon -->
        <item name="colorControlNormal">@color/white</item>
        <!--
        Using this value to change defaul icon back
        <item name="navigationIcon">@drawable/ic_back</item>
        -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>